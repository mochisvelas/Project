@{
    ViewBag.BodyClass = "ReservedWords";
    ViewBag.Title = "Cargar Palabras Reservadas";
    Layout = "~/Views/Layout.cshtml";
}
<section class="section" style="padding: 25px">
    <div class="content has-text-centered">
        <h1 class="title is-3">Palabras Reservadas</h1>
    </div>
    <div class="container is-fluid" style="margin-top: 20px">
        <form method="post" action="/DBMS/LoadFile" enctype="multipart/form-data">
            <div class="field is-grouped is-grouped-centered">
                <div class="control">
                    <div class="file is-success is-boxed has-name is-centered is-small">
                        <label class="file-label">
                            <input id="reservedWords" class="file-input" type="file" name="reservedWords" accept=".csv" />
                            <span class="file-cta">
                                <span class="file-icon">
                                    <i class="fas fa-file-upload"></i>
                                </span>
                                <span class="file-label">Palabras Reservadas</span>
                            </span>
                            <span id="fileName" class="file-name">Seleccione un archivo</span>
                        </label>
                    </div>
                </div>
                <div class="control">
                    <button class="button is-success is-outlined is-rounded" type="submit" name="uploadFile" style="margin-top: 15%">Subir Archivo</button>
                </div>
            </div>
            <p class="help has-text-centered">
                <span class="icon"><i class="fas fa-question-circle"></i></span>
                Recuerde que el archivo debe de poser una columna para la palabra y otra para el comando, y una linea para cabezera.
            </p>
        </form>
    </div>
    <div class="container"  style="margin-top: 20px">
        <div class="columns">
            <div class="column is-4 has-text-centered">
                <form method="post" action="/DBMS/DownloadDictionary">
                    <div class="field">
                        <div class="control">
                            <button class="button is-success is-outlined is-rounded" name="downloadDictionarie">Descargar Diccionario de Palabras</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="column is-4 has-text-centered">
                <button class="button is-success is-outlined is-rounded newWord" name="newWord">Nueva Palabra Reservada</button>
                <div class="columns">
                    <div class="column is-12 is-paddingless" style="margin-top: 20px">
                        <div class="notification" style="display: none"  id="reservedWordForm">
                            <button class="delete"></button>
                            <section class="section is-paddingless">
                                <form method="post" action="/DBMS/AddNewWord" class="is-paddingless">
                                    <div class="field has-addons has-addons-centered">
                                        <div class="control">
                                            <div class="select is-success is-rounded is-small">
                                                <select>
                                                    <option>SELECT</option>
                                                    <option>FROM</option>
                                                    <option>DELETE</option>
                                                    <option>WHERE</option>
                                                    <option>CREATE TABLE</option>
                                                    <option>DROP TABLE</option>
                                                    <option>INSERT INTO</option>
                                                    <option>VALUES</option>
                                                    <option>GO</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="control">
                                            <input type="text" class="input is-success is-rounded is-small" placeholder="Nueva Palabra" id="newWord" />
                                        </div>
                                    </div>
                                    <div class="field is-grouped is-grouped-centered">
                                        <div class="control">
                                            <button class="button is-rounded is-success" type="submit" name="submitWord">Agregar</button>
                                        </div>
                                        <div class="control">
                                            <button type="button" class="button is-rounded" id="cancel">Cancelar</button>
                                        </div>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column is-4 has-text-centered">
                <form method="post" action="/DBMS/ResetDictionary">
                    <div class="field">
                        <div class="control">
                            <button class="button is-success is-outlined is-rounded" name="defaultValue">Restablecer Valores Por Defecto</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

